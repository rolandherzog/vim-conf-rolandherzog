imap <M-l> )
imap <M-j> {
imap <M-k> }
imap <M-n> [
imap <M-m> ]
" imap IMAP ('<M-a>', '\added[RH]{<++>}<++>', "tex")
" imap IMAP ('<M-d>', '\deleted[RH]{<++>}<++>', "tex")
" imap IMAP ('<M-r>', '\replaced[RH]{<++>}{<++>}<++>', "tex")
" inoremap <M-a> \added[RH]{}
" inoremap <M-d> \deleted[RH]{}
" inoremap <M-r> \replaced[RH]{}{}
imap <C-s> <C-o>:w<CR>
imap <C-S-s> <C-o>:wall<CR>
inoremap <ESC> <ESC><Right>

